%h2= project.name
.details
  %div
    %h4= 'Description'
    %p= project.description
  %div
    %h4= 'Goal'
    %p= number_to_currency(project.goal)
  %div
    %h4= 'Currrent funds'
    %p= number_to_currency(project.current_funds)
  %div
    %h4= 'Status'
    %p= project.status.capitalize
  %div
    %h4= 'Payments'
    %ul
      - project.payments.each do |payment|
        %li
          %span.value= number_to_currency(payment.value)
          from
          %span.contributor= payment.user.decorate.full_name
          %span.date= "(#{payment.created_at.strftime("%d/%m/%Y")})"
    - if user_signed_in? && project.active?
      = link_to 'Add Payment', new_project_payment_path(project), class: 'btn btn-default'
    - if current_user == project.owner
      = link_to 'Edit Project', edit_project_path(project), class: 'btn btn-default'
  %div.comments
    %h4= 'Comments'
    - if project.comments.empty?
      %p= 'Be the first one to comment on this project!'
    - else
      - project.comments.each do |comment|
        = render comment
    %h5= 'Add Comment'
    = render 'comments/form', comment: project.comments.new, project: project
