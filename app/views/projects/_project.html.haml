%td= link_to project.name, project
%td= project.description
%td#counter
  :javascript
    $('#counter').countdown(#{project.finish_date.to_s.chomp(" UTC").to_json})
    .on('update.countdown', function(event) {
      var format = '%H:%M:%S';
      if(event.offset.days > 0) {
        format = '%-d day%!d ' + format;
      }
      if(event.offset.weeks > 0) {
        format = '%-w week%!w ' + format;
      }
    $(this).html(event.strftime(format));
    });
%td= number_to_currency(project.goal)
%td= number_to_currency(project.current_funds)
%td= project.decorate.percent_funds_raised
%td
  %i{ class: 'status status-' + project.status }
