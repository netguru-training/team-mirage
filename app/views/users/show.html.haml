%table.table.table-condensed
  %tbody
    %tr
      %td= "First name:"
      %td= user.first_name
    %tr
      %td= "Last name:"
      %td= user.last_name
    %tr
      %td= "Total payments:"
      %td= user.payments.sum(:value)

-if user.projects.any?
  %h2 Your projects
  %table.table.table-striped
    %thead
      %tr
        %th Project name
        %th Project description
        %th Project goal
    %tbody
      -user.projects.each do |p|
        %tr
          %td=p.name
          %td=p.description
          %td=p.goal

-if user.paid_projects.any?
  %h2 Your contributions
  %table.table.table-striped
    %thead
      %tr
        %th Project name
        %th Description
        %th Your contribution
    %tbody
      -user.paid_projects.each do |p|
        %tr
          %td=p.name
          %td=p.description
          %td=p.payments.sum(:value)
